@charset "UTF-8";

/* 기본 스타일 */
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: auto;
    background-color: #ffffff; /* 화이트 배경 */
    color: #121212; /* 다크 텍스트 */
    font-family: Arial, sans-serif;
}

/* 메인 컨테이너 */
.main_wrap {
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh; /* 화면 전체 높이를 차지하도록 */
}

/* 폼 스타일 */
form {
    background-color: #f8f9fa; /* 약간 밝은 화이트 */
    color: #121212; /* 다크 텍스트 */
    width: 400px;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* 부드러운 그림자 */
}

/* 라벨 스타일 */
label {
    display: block;
    font-weight: 600;
    margin-bottom: 10px;
    color: #212529; /* 진한 다크 그레이 */
}

/* 입력 필드 스타일 */
input, select {
    width: 100%; /* 모든 필드 동일한 크기 */
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ced4da; /* 라이트 그레이 테두리 */
    border-radius: 5px;
    background-color: #ffffff; /* 화이트 배경 */
    color: #212529; /* 다크 텍스트 */
    font-size: 14px;
    box-sizing: border-box; /* 박스 크기 계산 포함 */
}

input:focus, select:focus {
    outline: none;
    border-color: #495057; /* 포커스 시 진한 그레이 강조 */
    background-color: #e9ecef; /* 약간 밝은 그레이 */
}

/* 버튼 스타일 */
button {
    width: 100%;
    padding: 12px;
    background-color: #007bff; /* 파란색 배경 */
    color: #ffffff; /* 흰색 텍스트 */
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #0056b3; /* 더 진한 파란색 */
}

/* 입력 필드 및 버튼의 공통 전환 효과 */
input, select, button {
    transition: all 0.3s ease;
}

/* 에러 메시지 스타일 */
.error {
    color: #dc3545; /* 빨간색 */
    font-size: 12px;
    margin-top: -15px;
    margin-bottom: 15px;
}

/* 성공 메시지 스타일 */
.success {
    color: #28a745; /* 초록색 */
    font-size: 12px;
    margin-top: -15px;
    margin-bottom: 15px;
}

/* 반응형 디자인 */
@media (max-width: 480px) {
    form {
        width: 90%; /* 작은 화면에서는 폼 너비를 조정 */
